@model FileSharingSite.Models.FileModel

@{
    ViewData["Title"] = "О файле";
}

<h1>О файле</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Catalog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catalog.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Annotation)
        </dt>
        <dd class="col-sm-10">
            @{
                var text = Model.Annotation;
            }
            <textarea class="form-control" cols="40" rows="3" disabled="disabled">@text</textarea>
        </dd>
    </dl>
</div>
<div>
    <a href='javascript:history.go(-1)'>Вернуться обратно</a>
</div>
