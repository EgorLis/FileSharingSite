@model FileSharingSite.Models.LoginModel

@{ 
    var error = "";
    if(Model==null)
    {
        error = "";
    }
    else
    {
        error = "Введен неверный логин и(или) пароль";
    }
}

<h2 align="center">Вход на сайт</h2>

<div align="center">
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
</div>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div align="center">
            <a class="text-danger">@error</a>
        </div>
        <div align="center">
            <label asp-for="Login">Введите Login</label><br />
            <input type="text" asp-for="Login" />
        </div>
        <div align="center">
            <span asp-validation-for="Login" class="text-danger" align="right"></span>
        </div>
    </div>
    <div>
        <div align="center">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
        </div>
        <div align="center">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div align="center">
        <input type="submit" value="Войти" class="btn btn-outline-dark" />
    </div>
</form>