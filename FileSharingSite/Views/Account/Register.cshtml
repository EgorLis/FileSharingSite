@model FileSharingSite.Models.RegisterModel

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2 align="center">Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <div align="center">
                <a class="text-danger">@Model.ErrorMessage</a>
            </div>
            <div align="center">
                <label asp-for="Login">Введите Login</label><br />
                <input type="text" asp-for="Login" />
            </div>
            <div align="center">
                <span asp-validation-for="Login" class="text-danger" align="right"></span>
            </div>
        </div>
        <div>
            <div align="center">
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
            </div>
            <div align="center">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div align="center">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
            </div>
            <div align="center">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div align="center">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>